  gem 'jekyll-sitemap'
  gem 'jemoji'
  gem 'jekyll-seo-tag'
  gem 'jekyll-paginate-v2'
  gem 'jekyll-typogrify'
  gem 'jekyll-figure', :git => 'https://github.com/mmistakes/jekyll-figure.git'
  gem 'jekyll-algolia'
  gem 'jekyll-tagging-related_posts'
end
